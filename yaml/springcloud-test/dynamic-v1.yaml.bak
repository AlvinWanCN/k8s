apiVersion: extensions/v1beta1
kind: Deployment
metadata: 
  name: dynamic
  labels:
    name: dynamic
  namespace: springcloud-test
spec:
  replicas: 1
  template: 
    metadata:
      labels:
        run: dynamic
    spec:
      containers:
      - name: dynamic
        resources:
          limits:
            cpu: 2000m
            memory: 512Mi
          requests:
            cpu: 1000m
            memory: 256Mi
        env:
        - name: JAVA
          value: "/data/sprintcloud_sm/jdk1.8.0_101/bin/java"
        - name: PARAMETER1
          value: "-Xms128m"
        - name: PARAMETER2
          value: "-Xmx256m"
        - name: PARAMETER3
          value: "-jar"
        - name: FILENAME
          value: "/data/springcloud/com.shenmintech.dynamic-0.0.1-SNAPSHOT.jar"
        - name: PARAMETER4
          value: "--spring.profiles.active=test1"
        image: test2.shenmin.com:5000/dynamic:5.0.3.01
        ports:
        - containerPort: 9000
#          hostPort: 9000
        command: ["$(JAVA)"]
        args: ["$(PARAMETER1)", "$(PARAMETER2)", "$(PARAMETER3)", "$(FILENAME)", "$(PARAMETER4)"]
        volumeMounts:
        - name: java
          mountPath: /data/sprintcloud_sm
#          readOnly: true
      volumes:
      - name: java
        hostPath:
          path: /data2/k8springcloud
---
apiVersion: v1
kind: Service
metadata:
  name: smt-dynamic
  labels:
    run: smt-dynamic
  namespace: springcloud-test
spec:
  type: NodePort
  ports:
  - port: 9000
    targetPort: 9000
    nodePort: 30007
    protocol: TCP
  selector:
    run: dynamic
